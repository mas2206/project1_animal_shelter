<% @animals.each do |animal| %>
  <p>Name: <%= animal.name %></p>
  <p>Species: <%= animal.species %></p>
  <p>Admission date: <%= animal.admission_date %></p>
  <p>Availability: 
    <% if animal.availability == 't' %>
      Can be adopted
    <% else %> 
      Cannot be adopted
  <% end %>
  </p>
  <hr/>
<% end %>