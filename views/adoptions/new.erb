<h1>Create a new adoption</h1>

<form method="post" action="/adoptions">
  <p>Select an animal:</p>
  <p>
    <label>
      <select name="animal_id">
        <% for animal in @animals %>
        <% if animal.availability == 't' %>
        <option value="<%= animal.id %>"><%= animal.name %></option>
        <% end %>
      <% end %>
      </select>
    </label>
  </p>

  <p>Select an owner:</p>
  <p>
    <label>
      <select name="owner_id">
        <% for owner in @owners %>
        <option value="<%= owner.id %>"><%= owner.name %></option>
        <% end %>
      </select>
    </label>
  </p>

  <input type="submit" value="Create new adoption">
</form>